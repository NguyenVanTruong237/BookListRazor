@page
@model BookListRazor.Pages.BookList.UpsertModel



<br />
<h2 class="text-info">Form Book</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div> @*asp-validation-summary được sử dụng để hiển thị các thông báo xác thực*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"></span> @*Hiển thị thông báo nếu Name bỏ trống.*@
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.ISBN"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-3">
                @*<input type="submit" value="Update" class="btn btn-primary form-control" />*@ @*Sumbit tất cả các giá trị nhập vào về form method post*@
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id != 0 ? "Update" : "Edit")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-group">Back to list</a>
            </div>
        </div>
    </form>
</div>
@section scripts {
    <partial name="_ValidationScriptsPartial" /> @*xác nhận phía khách*@
}
